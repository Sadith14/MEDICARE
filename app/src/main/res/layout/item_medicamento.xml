<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@color/background_tertiary">

    <!-- Borde neón exterior -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/medication_item_border" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@drawable/medication_item_background">

        <!-- Icono del medicamento con glow -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_gravity="center_vertical">

            <!-- Glow del icono -->
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_medication"
                android:alpha="0.3"
                app:tint="@color/neon_cyan" />

            <!-- Icono principal -->
            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_medication"
                app:tint="@color/neon_cyan" />

        </FrameLayout>

        <!-- Información del medicamento -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Nombre con efecto neón -->
            <TextView
                android:id="@+id/tvNombreMedicamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del medicamento"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/neon_cyan"
                android:layout_marginBottom="6dp"
                android:shadowColor="@color/neon_cyan"
                android:shadowRadius="8"
                android:letterSpacing="0.05" />

            <!-- Cantidad con indicador visual -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/tvCantidadMedicamento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cantidad: 0 unidades"
                    android:textSize="13sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginEnd="8dp" />

                <!-- Indicador visual de cantidad -->
                <View
                    android:id="@+id/vIndicadorCantidad"
                    android:layout_width="40dp"
                    android:layout_height="4dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/cantidad_indicator"
                    android:alpha="0.8" />

            </LinearLayout>

            <!-- Horario -->
            <TextView
                android:id="@+id/tvHorarioMedicamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cada 0 horas"
                android:textSize="13sp"
                android:textColor="@color/neon_cyan"
                android:layout_marginBottom="4dp"
                android:drawableStart="@drawable/ic_schedule"
                android:drawableTint="@color/neon_cyan"
                android:drawablePadding="6dp" />

            <!-- Próxima toma destacada -->
            <TextView
                android:id="@+id/tvProximaToma"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Próxima toma: --:--"
                android:textSize="14sp"
                android:textColor="@color/neon_magenta"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"
                android:shadowColor="@color/neon_magenta"
                android:shadowRadius="6" />

            <!-- Fecha -->
            <TextView
                android:id="@+id/tvFechaMedicamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registrado: 01/01/2025"
                android:textSize="11sp"
                android:textColor="@color/text_hint"
                android:textStyle="italic" />

        </LinearLayout>

        <!-- Indicador de estado con animación -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp">

            <!-- Estado visual -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <!-- Glow del estado -->
                <ImageView
                    android:id="@+id/ivEstadoGlow"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_check_circle"
                    android:alpha="0.3"
                    app:tint="@color/accent_green2" />

                <!-- Icono de estado -->
                <ImageView
                    android:id="@+id/ivEstadoMedicamento"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_check_circle"
                    app:tint="@color/accent_green2" />

            </FrameLayout>

            <!-- Texto del estado -->
            <TextView
                android:id="@+id/tvEstadoTexto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OK"
                android:textSize="11sp"
                android:textColor="@color/accent_green2"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>